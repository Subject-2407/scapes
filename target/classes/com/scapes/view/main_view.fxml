<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>  <?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.TilePane?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="rootPane" prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.scapes.controller.MainController">
  <top>
    <HBox fx:id="topBar" alignment="CENTER_LEFT" spacing="10.0">
      <Label text="4scapes" fx:id="logoLabel" style="-fx-font-weight: bold; -fx-padding: 0 10 0 0;"/>
      <ComboBox fx:id="providerCombo" prefWidth="140.0" promptText="Pilih Sumber"/>
      <TextField fx:id="searchField" prefWidth="300.0" promptText="Cari wallpaper..."/>
      <Button onAction="#onSearchAction" text="Cari"/>
      <Button fx:id="themeBtn" onAction="#toggleTheme" text="☀"/>
      
      <Region HBox.hgrow="ALWAYS"/>
      
      <HBox alignment="CENTER_RIGHT" spacing="5">
        <Button fx:id="btnMin" onAction="#minimizeApp" text="—" style="-fx-background-color: transparent; -fx-cursor: hand;"/>
        <Button fx:id="btnMax" onAction="#maximizeApp" text="⬜" style="-fx-background-color: transparent; -fx-cursor: hand;"/>
        <Button fx:id="btnClose" onAction="#closeApp" text="✕" style="-fx-background-color: transparent; -fx-cursor: hand;"/>
      </HBox>
    </HBox>
  </top>

  <center>
    <StackPane>
      <Label fx:id="welcomeLabel" text="WELCOME">
        <font>
          <Font name="Segoe UI Light" size="64.0"/>
        </font>
      </Label>
      <ScrollPane fx:id="scrollPane" fitToWidth="true" visible="false">
        <content>
          <TilePane fx:id="imageGrid"/>
        </content>
      </ScrollPane>
    </StackPane>
  </center>
</BorderPane>